# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-jpythonfold
pkgver=3.2
_scriptid=10034
pkgrel=2
pkgdesc="A better python fold script"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=2527"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('81866af3199f166573c5225a9f839678'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -Dm755 ${srcdir}/${pkgname} ${pkgdir}/usr/share/vim/plugin/jpythonfold.vim || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

