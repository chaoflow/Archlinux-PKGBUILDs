# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-pydoc
pkgver=1.1.1
_scriptid=3973
pkgrel=1
pkgdesc="Python documentation view- and search-tool (uses pydoc)"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=910"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('b02f44eb7724bb0374bcba9a5215be1f'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -Dm755 ${srcdir}/${pkgname} ${pkgdir}/usr/share/vim/plugin/pydoc.vim || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}
