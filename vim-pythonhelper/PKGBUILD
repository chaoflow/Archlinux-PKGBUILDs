# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-pythonhelper
pkgver=0.82
_scriptid=10987
pkgrel=1
pkgdesc="Displays Python class, method or function the cursor is in on the status line"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=435"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('c0e8ad68f86ad81355679540a970b179'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -Dm755 ${srcdir}/${pkgname} ${pkgdir}/usr/share/vim/colors/pythonhelper.vim || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}
