# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vimoutliner
pkgver=122
_scriptid=5768
pkgrel=1
pkgdesc="Turn vim into a full-featured text outliner"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=517"
license=('custom')
depends=(vim)
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('ded940d96731de00e4b653a3cdabde4c'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -d ${pkgdir}/usr/share/vim/
    cp -aRf ${srcdir}/* ${pkgdir}/usr/share/vim/ || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

