# Maintainer: Laszlo Papp <djszapi @ gmail at com>
pkgname=vim-pydiction
pkgver=1.1
_scriptid=11040
pkgrel=1
pkgdesc="Allows you to auto-complete your Python code"
arch=(i686 x86_64)
url="http://www.vim.org/scripts/script.php?script_id=850"
license=('custom')
depends=('vim')
groups=('vim-plugins')
install=vimdoc.install
source=(${pkgname}.zip::http://www.vim.org/scripts/download_script.php?src_id=${_scriptid}
        license.txt)
md5sums=('4dc92b18d5ad57e6e165dca52448ecfa'
         'efbd5986e691ce8c876fb86e8f5961ea')

build() {
    install -d ${pkgdir}/usr/share/vim/plugin
    install -Dm755 ${srcdir}/pydiction-${pkgver}/* ${pkgdir}/usr/share/vim/plugin/ || return 1
    install -Dm755 ${srcdir}/license.txt ${pkgdir}/usr/share/licenses/${pkgname}/license.txt
}

