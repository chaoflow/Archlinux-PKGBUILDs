pkgname=vim-auctex
pkgver=2.2.1
pkgrel=3
pkgdesc="Macros for latex"
arch=('i686' 'x86_64')
url="http://www.vim.org/scripts/script.php?script_id=162"
license=('unknown')
groups=('vim-plugins')
depends=(vim)
source=(${pkgname}::http://www.vim.org/scripts/download_script.php?src_id=10437)
md5sums=('91bcd8e8858a23a6abaff9b6ac7a564f')

build() {
    install -Dm644 ${srcdir}/${pkgname} ${pkgdir}/usr/share/vim/vimfiles/plugin/auctex.vim || return 1
}
